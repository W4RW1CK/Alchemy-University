class Pact {
    constructor(func) {
        this.resolve = (value) => {
            this.thenFunct(value);
        }
        this.reject = (value) => {
            this.catchFunct(value);
        }
        func(this.resolve, this.reject)
    }
    catch($catch) {
        this.catchFunct = $catch;
    }
    then($then) {
        this.thenFunct = $then;
    }
}

module.exports = Pact;
